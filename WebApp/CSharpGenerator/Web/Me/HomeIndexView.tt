<#@ template language="C#" #>
<#@ assembly name="System.Core" #>
<#@ import namespace="System.Linq" #>
<#@ import namespace="System.Text" #>
<#@ import namespace="System.Collections.Generic" #>
<#@ import namespace="System.Data.Metadata.Edm"#>
@{
    ViewBag.Title = "<#=ApplicationName #> Dashboard";
}

<h1 class="page-header"><#=ApplicationName #> Dashboard</h1>

<div class="row">
<#
    foreach(var table in Tables){ 
 #>
  <div class="col-xs-6 col-sm-3 placeholder">
      <a href="/<#=table.Name #>/Index">
          <img data-src="holder.js/200x200/auto/sky" class="img-responsive" alt="200x200" src="data:image/svg+xml;base64," data-holder-rendered="true">
          <h4><#=table.Name #></h4>
      </a>
  </div>
<#    } #>
</div>


<#+
    public string ApplicationName {set;get;}
    public List<EntityType> Tables{set;get;}
 #>
