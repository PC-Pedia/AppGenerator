@model AppsGenerator.Models.ManageUserViewModel

@{
    ViewBag.Title = "Change Password";
}

@*<p>You're logged in as <strong>@User.Identity.GetUserName()</strong>.</p>*@

@using (Html.BeginForm("ChangePassword", "Member", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="panel panel-primary">
        <div class="panel-heading text-center">
            <h2>Change Password</h2>
        </div>
        <div class="panel-body">

            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-5 control-label" })
                <div class="col-md-5">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @maxlength = "18" })
                    @Html.ValidationMessageFor(m => m.OldPassword)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-5 control-label" })
                <div class="col-md-5">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @maxlength = "18" })
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })
                <div class="col-md-5">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @maxlength = "18" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-7">
                    <input type="submit" value="Change Password" class="btn btn-default" />
                </div>
            </div>

            <div class="text-center">
                @Html.ValidationMessage("ChangePassword")
            </div>

        </div>
    </div>
}